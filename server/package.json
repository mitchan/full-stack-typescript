  "description": "A simple task management applicaton for the sole purpose of learning how to build type-safe applications.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx,js,jsx}\"",
    "validate:openapi": "tsx src/validate-openapi.ts"
  },
  "author": "Steve Kinney <hello@stevekinney.net> (https://stevekinney.net/courses/full-stack-typescript)",
  "license": "MIT",
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.7",
    "@prisma/client": "^6.5.0",
    "@trpc/server": "^10.45.2",
    "@types/swagger-ui-express": "^4.1.8",
    "busy-bee-schema": "*",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-openapi-validator": "^5.4.6",
    "openapi3-ts": "^4.4.0",
    "prisma-trpc-generator": "^1.4.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2",
    "zod-prisma-types": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.10",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "openapi-schema-validator": "^12.1.3",
    "prettier": "^3.2.5",
    "prisma": "^6.5.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^7.2.0",
    "vitest": "^3.0.8"
  }
